#include <stdio.h>
void decimalToBinary(int n) {
    int biner[32]; 
    int i = 0;
    if (n == 0) {
        printf("0");
        return;
    }
    while (n > 0) {
        biner[i] = n % 2;  
        n = n / 2;         
        i++;
    }
    for (int j = i - 1; j >= 0; j--) {
        printf("%d", biner[j]);
    }
}
void cekGenapGanjil(int n) {
    if (n % 2 == 0) {
        printf("Bilangan ini GENAP\n");
    } else {
        printf("Bilangan ini GANJIL\n");
    }
}
int main() {
    int desimal;
    printf("Masukkan bilangan desimal: ");
    scanf("%d", &desimal);
    printf("Biner dari %d adalah: ", desimal);
    decimalToBinary(desimal);
    printf("\n");
    cekGenapGanjil(desimal);
    return 0;
}
